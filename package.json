{
	"scripts": {
		"dev:firefox": "concurrently \"npm:dev:css\" \"npm:dev:js\" \"npm:test:firefox\"",
		"dev:chromium": "concurrently \"npm:dev:css\" \"npm:dev:js\" \"npm:test:chromium\"",
		"lint:fix": "eslint --fix src",
		"dev:js": "ts-node utils/builder-extension.ts",
		"dev:css": "sass --watch src/styleshift/styles/setting.scss out/build/style.css --style=compressed --no-source-map",
		"build_module": "ts-node utils/builder-modules.ts",
		"build:prod": "sass src/styleshift/styles/setting.scss out/build/style.css --style=compressed --no-source-map && ts-node utils/builder-extension.ts --production --once && npm run build_module",
		"build:release": "npm run build:prod && ts-node utils/builder-release.ts",
		"build:types": "tsc -p utils/tsconfig-builder-types.json && ts-node utils/builder-types.ts",
		"build:types_raw": "tsc -p utils/tsconfig-builder-types.json",
		"build:folder_template": "ts-node utils/builder-template.ts -p utils/tsconfig-builder-types.json",
		"test:firefox": "web-ext run --pref gfx.webrender.all=true --source-dir=./out/dist/firefox",
		"test:chromium": "web-ext run --target=chromium --source-dir=./out/dist/chromium"
	},
	"dependencies": {
		"jszip": "^3.10.1",
		"monaco-editor": "^0.52.2",
		"monaco-themes": "^0.4.7"
	},
	"devDependencies": {
		"@eslint/js": "^9.39.1",
		"@types/chrome": "^0.0.268",
		"@types/node": "^22.19.1",
		"archiver": "^7.0.1",
		"azpepoze.node_tools": "^1.0.4",
		"chokidar": "^4.0.3",
		"concurrently": "^9.2.1",
		"dotenv": "^17.2.3",
		"esbuild": "^0.24.2",
		"eslint": "^9.39.1",
		"fs-extra": "^11.3.2",
		"globals": "^16.5.0",
		"jiti": "^2.6.1",
		"sass": "^1.94.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.48.0",
		"web-ext": "^9.2.0"
	}
}
