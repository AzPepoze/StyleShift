{
	"name": "styleshift",
	"description": "Website customizer tool.",
	"version": "0.8.1",
	"keywords": [
		"styleshift",
		"web",
		"customize",
		"enhance",
		"azpepoze"
	],
	"author": "AzPepoze",
	"license": "MIT",
	"scripts": {
		"dev": "npm-run-all -p dev_css dev_js",
		"dev_js": "ts-node utils/builder-extension.ts",
		"dev_css": "sass --watch src/main/styles/setting.scss out/build/style.css --style=compressed --no-source-map",
		"build_module": "ts-node utils/builder-modules.ts",
		"full_build": "sass src/main/styles/setting.scss out/build/style.css --style=compressed --no-source-map && node utils/builder-extension.ts --production --once && npm run build_module",
		"build_release": "ts-node utils/build-release.ts",
		"gen_types": "tsc -p utils/tsconfig-builder-types.json && ts-node utils/builder-types.ts",
		"gen_raw_types": "tsc -p utils/tsconfig-builder-types.json",
		"gen_templates": "ts-node utils/builder-template.ts -p utils/tsconfig-builder-types.json"
	},
	"devDependencies": {
		"@types/chrome": "^0.0.268",
		"@types/node": "^22.17.2",
		"archiver": "^7.0.1",
		"azpepoze.node_tools": "^1.0.4",
		"chokidar": "^4.0.3",
		"dts-gen": "^0.10.5",
		"esbuild": "^0.24.2",
		"fs-extra": "^11.3.1",
		"jszip": "^3.10.1",
		"monaco-editor": "^0.52.2",
		"monaco-themes": "^0.4.6",
		"npm-run-all": "^4.1.5",
		"sass": "^1.90.0",
		"ts-loader": "^9.5.2",
		"ts-node": "^10.9.2",
		"typescript": "^5.9.2"
	}
}
