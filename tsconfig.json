{
	"compilerOptions": {
		"target": "es2022",
		"module": "commonjs",
		"strict": false,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"outDir": "./dist",
		"types": ["chrome", "node"],
		"strictNullChecks": false,
		"noImplicitAny": false
	},
	"include": ["src/**/*", "dist/Background.js"],
	"exclude": ["node_modules"]
}
